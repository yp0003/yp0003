<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="mypackage" extends="yfann-default" abstract="true">
		<interceptors>
			<interceptor name="loginCheck" class="com.yfann.web.interceptor.LoginInterceptor" />
			<interceptor-stack name="mydefaultStack">
				<interceptor-ref name="yfannDefaultStack"></interceptor-ref>
				<interceptor-ref name="loginCheck"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="mydefaultStack"></default-interceptor-ref>
		<!-- 配置全局结果集,转向错误页面和拒绝页面 -->
		<global-results>
			<result name="toerror">/WEB-INF/pages/oa/login_oa.jsp</result>
		</global-results>
	</package>
	
	<package name="oalogin" namespace="/" extends="yfann-default">
		<!-- OA登录 -->
		<action name="oalogin!*" method="{1}" class="com.yfann.web.action.oa.OaLoginAction">
			<!-- 跳转到登录 -->
			<result name="forwardLogin">/WEB-INF/pages/oa/login_oa.jsp</result>
			<!-- 跳转到注册 -->
			<result name="forwardRegister">/WEB-INF/pages/oa/register_oa.jsp</result>
			<!-- 跳转到OA主页 -->
			<result name="forwardIndex">/WEB-INF/pages/oa/index_oa.jsp</result>
			<result name="loginSuccess">/WEB-INF/pages/oa/index_oa.jsp</result>
			<result type="json"></result>
			<!-- 欢迎页面 -->
			<result name="welcome">/WEB-INF/pages/oa/welcome_oa.jsp</result>
			<!-- 找回密码 -->
			<result name="tofindpassword">/WEB-INF/pages/oa/employee/findPassword.jsp</result>
		</action>
	</package>

	<!-- 菜单 -->
	<package name="oamenu" namespace="/" extends="mypackage">
		<action name="oaMenu!*" method="{1}" class="com.yfann.web.action.oa.OaMenuAction">
			<result name="tolist">/WEB-INF/pages/oa/menu/menulist_oa.jsp</result>
			<result name="add">/WEB-INF/pages/oa/menu/menuadd_oa.jsp</result>
			<result name="update">/WEB-INF/pages/oa/menu/menuupdate_oa.jsp</result>
		</action>
	</package>

	<!-- 部门 -->
	<package name="oadepart" namespace="/" extends="mypackage">
		<action name="oaDepart!*" method="{1}" class="com.yfann.web.action.oa.OaDepartmentAction">
			<result name="tolist">/WEB-INF/pages/oa/depart/departlist_oa.jsp</result>
			<result name="add">/WEB-INF/pages/oa/depart/departadd_oa.jsp</result>
			<result name="update">/WEB-INF/pages/oa/depart/departupdate_oa.jsp</result>
		</action>
	</package>

	<!-- 角色 -->
	<package name="oarole" namespace="/" extends="mypackage">
		<action name="oaRole!*" method="{1}" class="com.yfann.web.action.oa.OaRoleAction">
			<result name="tolist">/WEB-INF/pages/oa/role/rolelist_oa.jsp</result>
			<result name="add">/WEB-INF/pages/oa/role/roleadd_oa.jsp</result>
			<result name="update">/WEB-INF/pages/oa/role/roleupdate_oa.jsp</result>
			<result name="action2action" type="redirect">oaRole!toList.html</result>
		</action>
	</package>

	<!-- 用户 -->
	<package name="oaemp" namespace="/" extends="mypackage">
		<action name="oaEmp!*" method="{1}" class="com.yfann.web.action.oa.OaEmployeeAction">
			<result name="toEmpList">/WEB-INF/pages/oa/employee/employeelist_oa.jsp</result>
			<result name="selectEmp">/WEB-INF/pages/oa/employee/employeelist_oa.jsp</result>
			<!-- <result type="json"></result> -->
			<!-- <result name="add">/WEB-INF/pages/oa/employee/employeeadd_oa.jsp</result> -->
			<result name="update">/WEB-INF/pages/oa/employee/empupdate_oa.jsp</result>
			<result name="myinfo">/WEB-INF/pages/oa/employee/myinfoupdate_oa.jsp</result>
			<result name="updatePasswordUI">/WEB-INF/pages/oa/employee/updatePassword_oa.jsp</result>
			<result name="forwardLogin">/WEB-INF/pages/oa/login_oa.jsp</result>
			<result name="privilegeByEmp">/WEB-INF/pages/oa/employee/employeeprivilege_oa.jsp</result>
			<result name="action2action" type="redirect">oaEmp!toEmpList.html</result>
			<result name="logout" type="redirect">oalogin!logout.html</result>

			<result name="updateImage">/WEB-INF/pages/oa/employee/empupdateimage_oa.jsp</result>

			<!-- 头像-->
			<result name="headImage" type="stream">
				<param name="contentType">image/png</param>
				<param name="inputName">inputStreamCre</param>
			</result>
			
			<result name="showImage" type="stream">
				<param name="contentType">image/png,image/gif,image/jpg,image/jpeg,image/bmp</param>
				<param name="inputName">byteArrayInputStream</param>
			</result>



			<!-- 客户 -->
			<result name="toUserList">/WEB-INF/pages/oa/employee/userlist_oa.jsp</result>
			<result name="selectUser">/WEB-INF/pages/oa/employee/userlist_oa.jsp</result>
			<result name="updateUser">/WEB-INF/pages/oa/employee/uupdate_oa.jsp</result>
			<result name="privilegeByUser">/WEB-INF/pages/oa/employee/userprivilege_oa.jsp</result>
			<result name="action2actionUser" type="redirect">oaEmp!toUserList.html</result>
		</action>
	</package>

	<!-- 公告 -->
	<package name="oapm" namespace="/" extends="mypackage">
		<action name="oaPublicMessage!*" method="{1}" class="com.yfann.web.action.oa.OaPublicMessageAction">
			<result name="forwardPulbicMessageList">/WEB-INF/pages/oa/publicMessage/publicMessagelist_oa.jsp</result>
			<result name="forwardPulbicMessageInfo">/WEB-INF/pages/oa/publicMessage/publicMessageadd_oa.jsp</result>
			<result name="update">/WEB-INF/pages/oa/publicMessage/publicMessageupdate_oa.jsp</result>
			<result name="action2action" type="redirect">oaPM!toList.html</result>
		</action>
	</package>

	<!-- 产品 -->
	<package name="oaProduct" namespace="/" extends="mypackage">
		<action name="oaProduct!*" method="{1}" class="com.yfann.web.action.oa.OaProductAction">
			<result name="forwardProductList">/WEB-INF/pages/oa/product/productlist_oa.jsp</result>
			<result name="productInfo">/WEB-INF/pages/oa/product/productInfo_oa.jsp</result>
		</action>
	</package>

	<!-- 消息 -->
	<package name="oamessage" namespace="/" extends="mypackage">
		<action name="oaMessage!*" method="{1}" class="com.yfann.web.action.oa.OaMessageAction">
			<result name="tolist">/WEB-INF/pages/oa/message/messagelist_oa.jsp</result>
			<result name="add">/WEB-INF/pages/oa/message/messageadd_oa.jsp</result>
			<result name="update">/WEB-INF/pages/oa/message/messageupdate_oa.jsp</result>
			<result name="action2action" type="redirect">oaMessage!toList.html</result>
			<result name="forwardLogin">/WEB-INF/pages/oa/login_oa.jsp</result>
		</action>
	</package>

	<!-- 审批 -->
	<package name="oaapply" namespace="/" extends="mypackage">
		<action name="oaApply!*" method="{1}" class="com.yfann.web.action.oa.OaApplyAction">
			<result name="applylist">/WEB-INF/pages/oa/apply/applylist_oa.jsp</result>
			<result name="applyadd">/WEB-INF/pages/oa/apply/applyInfo_oa.jsp</result>
			<result name="applyview">/WEB-INF/pages/oa/apply/applyview_oa.jsp</result>
			<result name="authorizelist">/WEB-INF/pages/oa/apply/authorizelist_oa.jsp</result>
			<result name="authorizeupdate">/WEB-INF/pages/oa/apply/authorizeupdate_oa.jsp</result>
			<result name="paylist">/WEB-INF/pages/oa/apply/paylist_oa.jsp</result>
			<result name="forwardLogin">/WEB-INF/pages/oa/login_oa.jsp</result>
		</action>
	</package>

</struts>
